<style>
	html {
		scroll-behavior: smooth;
		color-scheme: light;
	}

	html.dark-mode {
		color-scheme: dark;
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	:root {
		--color-text: #280101;
		--color-bg: #ffffff;
		--color-bg-alt: #f9f3f3;
		--color-border: #f0f0f0;
		--color-text-secondary: #666;
		--color-navbar: rgba(255, 255, 255, 0.95);
		--color-navbar-border: rgba(40, 1, 1, 0.08);
		--color-accent: #280101;
		--color-accent-hover: #3d0202;
	}

	html.dark-mode {
		--color-text: #f0f0f0;
		--color-bg: #0f0f0f;
		--color-bg-alt: #1a1a1a;
		--color-border: #2a2a2a;
		--color-text-secondary: #b0b0b0;
		--color-navbar: rgba(15, 15, 15, 0.95);
		--color-navbar-border: rgba(240, 240, 240, 0.1);
		--color-accent: #f0f0f0;
		--color-accent-hover: #e0e0e0;
	}

	.container {
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
		color: var(--color-text);
		background: var(--color-bg);
		transition: background-color 0.3s ease, color 0.3s ease;
	}

	.navbar {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		background: var(--color-navbar);
		backdrop-filter: blur(10px);
		z-index: 1000;
		border-bottom: 1px solid var(--color-navbar-border);
		transition: background-color 0.3s ease, border-color 0.3s ease;
	}

	.nav-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: 1.5rem 2rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.nav-logo {
		font-size: 1.5rem;
		font-weight: 600;
		color: var(--color-text);
		text-decoration: none;
		letter-spacing: 0.1em;
		transition: color 0.3s ease;
	}

	.nav-links {
		display: flex;
		gap: 2.5rem;
	}

	.nav-link {
		color: var(--color-text);
		text-decoration: none;
		font-size: 0.95rem;
		font-weight: 500;
		position: relative;
		transition: color 0.3s ease;
	}

	.nav-link:after {
		content: '';
		position: absolute;
		bottom: -5px;
		left: 0;
		width: 0;
		height: 2px;
		background: var(--color-text);
		transition: width 0.3s ease;
	}

	.nav-link:hover:after {
		width: 100%;
	}

	.theme-toggle {
		background: none;
		border: none;
		font-size: 1.3rem;
		cursor: pointer;
		padding: 0.5rem;
		display: flex;
		align-items: center;
		justify-content: center;
		transition: transform 0.3s ease;
	}

	.theme-toggle:hover {
		transform: rotate(20deg);
	}

	.theme-icon {
		display: inline-block;
	}

	.hero {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		background: var(--color-bg);
		position: relative;
		overflow: hidden;
		padding-top: 80px;
		transition: background-color 0.3s ease;
	}

	.hero::before {
		content: '';
		position: absolute;
		top: 50%;
		right: -10%;
		width: 500px;
		height: 500px;
		background: radial-gradient(circle, rgba(40, 1, 1, 0.05) 0%, transparent 70%);
		border-radius: 50%;
		animation: float 6s ease-in-out infinite;
	}

	html.dark-mode .hero::before {
		background: radial-gradient(circle, rgba(240, 240, 240, 0.1) 0%, transparent 70%);
	}

	@keyframes float {
		0%, 100% { transform: translateY(0px); }
		50% { transform: translateY(30px); }
	}

	.hero-content {
		text-align: center;
		z-index: 1;
		padding: 2rem;
	}

	.logo {
		font-size: clamp(3.5rem, 12vw, 7rem);
		font-weight: 300;
		letter-spacing: 0.2em;
		color: var(--color-text);
		margin-bottom: 1.5rem;
		text-transform: uppercase;
		animation: fadeInDown 1s ease-out;
		transition: color 0.3s ease;
	}

	.tagline {
		font-size: clamp(1.1rem, 3vw, 1.5rem);
		color: var(--color-text);
		font-weight: 400;
		letter-spacing: 0.05em;
		animation: fadeInUp 1s ease-out 0.2s both;
		transition: color 0.3s ease;
	}

	.cta-button {
		display: inline-block;
		margin-top: 2.5rem;
		padding: 1rem 3rem;
		background: var(--color-text);
		color: var(--color-bg);
		text-decoration: none;
		border-radius: 4px;
		font-weight: 500;
		transition: all 0.3s ease;
		animation: fadeInUp 1s ease-out 0.4s both;
	}

	.cta-button:hover {
		background: var(--color-accent-hover);
		transform: translateY(-3px);
		box-shadow: 0 10px 25px rgba(40, 1, 1, 0.15);
	}

	html.dark-mode .cta-button:hover {
		box-shadow: 0 10px 25px rgba(240, 240, 240, 0.2);
	}

	@keyframes fadeInDown {
		from {
			opacity: 0;
			transform: translateY(-30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	section {
		padding: 6rem 2rem;
	}

	.content {
		max-width: 1200px;
		margin: 0 auto;
	}

	h2 {
		font-size: clamp(2.2rem, 5vw, 3.5rem);
		font-weight: 300;
		text-align: center;
		margin-bottom: 3.5rem;
		color: var(--color-text);
		letter-spacing: 0.05em;
		transition: color 0.3s ease;
	}

	h3 {
		text-align: center;
		color: var(--color-text);
		transition: color 0.3s ease;
	}

	h4 {
		color: var(--color-text);
		transition: color 0.3s ease;
	}

	.about {
		background: var(--color-bg);
		transition: background-color 0.3s ease;
	}

	.about-parts {
		max-width: 1000px;
		margin: 0 auto;
	}

	.about-part {
		margin-bottom: 3rem;
	}

	.about-highlight {
		font-size: 1.15rem;
		line-height: 1.9;
		text-align: center;
		color: var(--color-text);
		font-weight: 500;
		transition: color 0.3s ease;
	}

	.about-divider {
		height: 2px;
		background: linear-gradient(to right, transparent, var(--color-text), transparent);
		margin: 2.5rem 0;
		transition: background 0.3s ease;
	}

	.about-description {
		font-size: 1.1rem;
		line-height: 1.9;
		text-align: center;
		color: var(--color-text);
		transition: color 0.3s ease;
	}

	.significance {
		background: var(--color-bg);
		transition: background-color 0.3s ease;
	}

	.features-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2.5rem;
		max-width: 1200px;
		margin: 0 auto;
	}

	.feature-box {
		background: var(--color-bg);
		padding: 2.5rem 2rem;
		border-radius: 8px;
		border: 2px solid var(--color-border);
		text-align: center;
		transition: all 0.3s ease;
		box-shadow: 0 4px 15px rgba(40, 1, 1, 0.05);
	}

	html.dark-mode .feature-box {
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
	}

	.feature-box:hover {
		border-color: var(--color-text);
		transform: translateY(-8px);
		box-shadow: 0 12px 35px rgba(40, 1, 1, 0.15);
	}

	html.dark-mode .feature-box:hover {
		box-shadow: 0 12px 35px rgba(240, 240, 240, 0.2);
	}

	.feature-number {
		font-size: 2.5rem;
		font-weight: 300;
		margin-bottom: 1.5rem;
		display: block;
		color: var(--color-text);
		opacity: 0.6;
		transition: opacity 0.3s ease;
	}

	.feature-box:hover .feature-number {
		opacity: 1;
	}

	.feature-box h3 {
		font-size: 1.2rem;
		color: var(--color-text);
		margin-bottom: 1rem;
		font-weight: 500;
		transition: color 0.3s ease;
	}

	.feature-box p {
		color: var(--color-text-secondary);
		line-height: 1.6;
		font-size: 0.95rem;
		transition: color 0.3s ease;
	}

	.methodology {
		background: var(--color-bg-alt);
		transition: background-color 0.3s ease;
	}

	.methodology-intro {
		font-size: 1.1rem;
		line-height: 1.9;
		text-align: center;
		max-width: 1000px;
		margin: 0 auto 4rem;
		color: var(--color-text);
		transition: color 0.3s ease;
	}

	.methodology-process {
		max-width: 1100px;
		margin: 0 auto 5rem;
	}

	.methodology-process h3 {
		font-size: 1.8rem;
		color: var(--color-text);
		margin-bottom: 3rem;
		font-weight: 400;
		transition: color 0.3s ease;
	}

	.process-steps {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 2rem;
	}

	.step {
		background: var(--color-bg);
		padding: 2rem;
		border-radius: 8px;
		text-align: center;
		border: 2px solid var(--color-border);
		transition: all 0.3s ease;
		position: relative;
	}

	.step:hover {
		border-color: var(--color-text);
		transform: translateY(-6px);
		box-shadow: 0 10px 30px rgba(40, 1, 1, 0.1);
	}

	html.dark-mode .step:hover {
		box-shadow: 0 10px 30px rgba(240, 240, 240, 0.1);
	}

	.step-number {
		font-size: 2.5rem;
		font-weight: 300;
		color: var(--color-text);
		margin-bottom: 1.5rem;
		opacity: 0.7;
		transition: opacity 0.3s ease;
	}

	.step:hover .step-number {
		opacity: 1;
	}

	.step h4 {
		font-size: 1.1rem;
		color: var(--color-text);
		margin-bottom: 1rem;
		font-weight: 500;
		transition: color 0.3s ease;
	}

	.step p {
		color: var(--color-text-secondary);
		font-size: 0.95rem;
		line-height: 1.6;
		transition: color 0.3s ease;
	}

	.methodology-design {
		background: var(--color-bg);
		padding: 3rem;
		border-radius: 8px;
		max-width: 1100px;
		margin: 0 auto;
		transition: background-color 0.3s ease;
	}

	.methodology-design h3 {
		font-size: 1.8rem;
		color: var(--color-text);
		margin-bottom: 1rem;
		font-weight: 400;
		transition: color 0.3s ease;
	}

